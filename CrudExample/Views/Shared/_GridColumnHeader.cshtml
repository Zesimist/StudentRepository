
﻿@if(ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOptions.ASC.ToString())
{
    <th>
        <a href="@Url.Action("Index", "Persons", new { searchBy = ViewBag.CurrentSearchBy, searchString = ViewBag.CurrentSearchString, sortBy = ViewBag.ColumnName, sortOrder = "DESC" })">@(ViewBag.DisplayName)</a>
        <i class="fa-solid fa-sort-up"></i>
    </th>
}
else if(ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == SortOptions.DESC.ToString())
{
    <th>
        <a href="@Url.Action("Index", "Persons", new { searchBy = ViewBag.CurrentSearchBy, searchString = ViewBag.CurrentSearchString, sortBy = ViewBag.ColumnName, sortOrder = "ASC" })">@(ViewBag.DisplayName)</a>
        <i class="fa-solid fa-sort-down"></i>
    </th>
}
else
{
    <th>
        <a href="@Url.Action("Index", "Persons", new { searchBy = ViewBag.CurrentSearchBy, searchString = ViewBag.CurrentSearchString, sortBy = ViewBag.ColumnName, sortOrder = "DESC" })">@(ViewBag.DisplayName)</a>
    </th>
}


